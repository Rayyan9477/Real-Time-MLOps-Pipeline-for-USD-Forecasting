# Twelve Data API Configuration
TWELVE_DATA_API_KEY=63235e73625541869a81e1ab222c4e13
TWELVE_DATA_BASE_URL=https://api.twelvedata.com

# Data Configuration
FOREX_SYMBOL=EUR/USD
DATA_INTERVAL=1h
FETCH_SIZE=168

# MinIO Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=processed-data
MINIO_SECURE=false

# MLflow Configuration (Local with MinIO)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://airflow:airflow@localhost:5432/mlflow
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000
MLFLOW_ARTIFACT_ROOT=s3://mlflow-artifacts/
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# DVC Configuration (Google Drive)
DVC_REMOTE_TYPE=gdrive
DVC_GDRIVE_FOLDER_ID=your_google_drive_folder_id
# Get folder ID from Google Drive URL: https://drive.google.com/drive/folders/FOLDER_ID
# For service account authentication (CI/CD):
DVC_GDRIVE_USE_SERVICE_ACCOUNT=true
DVC_GDRIVE_SERVICE_ACCOUNT_JSON_PATH=.secrets/google-service-account.json

# Model Configuration
MODEL_NAME=usd_volatility_predictor
MODEL_REGISTRY_STAGE=Production
ROLLING_WINDOW_SIZE=24
TRAIN_TEST_SPLIT=0.8

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
ALERT_LATENCY_THRESHOLD_MS=500
ALERT_DRIFT_THRESHOLD_PCT=20

# API Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Docker Hub Configuration
DOCKER_USERNAME=your_docker_username
DOCKER_IMAGE_NAME=usd-volatility-predictor
DOCKER_IMAGE_TAG=latest

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here
